<%- include('partials/header') %>

<body>
    <%- include('partials/navbar') %> 
    <div class="container">
        <div class="mt-3 mb-2 text-right">
            <a class="btn btn-primary btn-rounded" href="/">Back to questions</a>
        </div>
        
        <div class="mt-3">
            <div class="card">
                <div class="card-body">
                    <h1><%= question.title %></h1>
                    <h5><%= question.question %> </h5>
                </div>                
            </div>
        </div>

        <div class="mt-3">
            <div class="card">
                <div class="card-body">
                    <h4>Answer question</h4>
                    <form action="/answer" method="POST">
                        <input type="text" style="display: none;" name="questionId" value="<%= question.id %>">
                        <textarea name="answer" class="form-control" cols="30" rows="10"></textarea>
                        <div class="mt-2">
                            <button class="btn btn-primary btn-rounded" type="submit">Send</button>
                        </div>
                    </form>
                </div>
            </div>            
        </div>

        <% responses.forEach((response) => { %>
            <div class="mt-3">
                <div class="card">
                    <div class="card-body"><%= response.body %> </div>
                </div>
            </div>            
        <% }) %>
        
    </div>
    
    <%- include('partials/footer') %>
</body>

</html>